<.header>
  Listing Conversations
  <:actions>

  </:actions>
</.header>

<.table
  id="conversations"
  rows={@conversations}
>
  <:col :let={conversation} label="id"><%= conversation.id %> 
  </:col>
  <:action >
    <div class="sr-only">
      <.link navigate={~p"/conversations/"}>Index</.link>
    </div>
  </:action>
  <:action :let={{id, conversation}}>
    <.link
      phx-click={JS.push("delete", value: %{id: conversation.id}) |> hide("##{id}")}
      data-confirm="Are you sure?"
    >
      Delete
    </.link>
  </:action>
</.table>
